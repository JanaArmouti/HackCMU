{
    "name": "Reading Buddy",
    "description": "Extension to encourage reading articles!",
    "version": "1.0",
    "manifest_version": 3,

    "background" : {
        "service_worker" : "background.js"
     },
     "content_scripts" : [
         {
         "matches" : [
         "<all_urls>"
         ],
         "js" : ["content.js"]
         }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "news.png"
    },

    "permissions": ["storage", "activeTab", "scripting", "clipboardWrite", "tabs"]
}